<section class="mt-5">
    <a href="/new" class="btn btn-info">建立新的一筆</a>
    <div class="d-flex">
 <div class="left-content">
 {{#if items}}
    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">項目名稱</th>
                <th scope="col">時間</th>
                <th scope="col">金額</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each items}}
            <tr >
                <td class="align-middle"><a href="/item/{{this._id}}">{{this.name}}</a></td>
                <td class="align-middle">{{this.date}}</td>
                <td class="align-middle">${{this.number}}</td>
                <td class="d-flex">

                    <a href="/item/edit/{{ this._id }}" class="btn btn-info">修改</a>
                    <form action="/item/{{ this._id }}?_method=DELETE" method="POST">
                        <button class="ms-3 btn btn-danger" type="submit">刪除</buttom>
                    </form>

                </td>

            </tr>
            {{/each}}

        </tbody>
    </table>
    {{else}}
    <h4 class="mt-5">目前還沒有內容</h4>
    {{/if}}
    </div>
    <div class="right-content">
        <h2>this is right content</h2>
    </div>
   
    </div>
   

</section>