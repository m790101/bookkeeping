<section class="mx-auto" style="width:60%;">
    <h2 class="mt-5 text-center">創立帳號</h2>
    {{> message}}
    <form action="/user/register" method="POST" class="mt-3">
        <div class="mb-3">
            <label for="name" class="form-label">使用者名稱:</label>
            <input type="text" class="form-control" id="name" name="name" value="{{name}}">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                value="{{email}}">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">密碼：</label>
            <input type="password" class="form-control" id="password" name="password" value="{{password}}">
        </div>
        <div class="mb-3">
            <label for="password-confirm" class="form-label">密碼確認：</label>
            <input type="password" class="form-control" id="password-conform" name="passwordConfirm"
                value="{{passwordConfirm}}">
        </div>
        <button type="submit" class="btn btn-primary">送出</button>
    </form>
    <div class="d-flex flex-row-reverse">
        <a href="/user/login">登入頁面</a>
    </div>

</section>