<section class="mx-auto" style="width:60%;">
    <h2 class="mt-5 text-center">帳號登入</h2>
    {{> message}}
    <form action="/user/login" method="POST" class="mt-3">
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">密碼：</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-primary" style="width:100%;">送出</button>
        <a href="/auth/facebook" class="btn btn-info mt-3" style="width:100%;">FB登入</a>
    </form>
    <div class="d-flex flex-row-reverse mt-3">
        <a href="/user/register">註冊帳號</a>
    </div>

</section>